<h1>All restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
    <%= restaurant.name %>
    <br><%= restaurant.address %></br>
    <br><%= restaurant.category %></br>
    <br><%= restaurant.phone_number %></br>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path %>
